<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Meals">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="25sp"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:id="@+id/Hello2" />
    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="breakfast"
        android:id="@+id/breakfast"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add ingredients :    "
        android:inputType="text"
        android:id="@+id/edit_breakfast"
        android:enabled="false"
        android:textColorHint="@android:color/holo_blue_light"/>
    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lunch"
        android:id="@+id/lunch"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add ingredients :    "
        android:inputType="text"
        android:id="@+id/edit_lunch"
        android:enabled="false"
        android:textColorHint="@android:color/holo_blue_light"/>
    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:id="@+id/dinner"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add ingredients :    "
        android:inputType="text"
        android:id="@+id/edit_dinner"
        android:enabled="false"
        android:textColorHint="@android:color/holo_blue_light"/>
    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snack"
        android:id="@+id/snack"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add ingredients :    "
        android:inputType="text"
        android:id="@+id/edit_snack"
        android:enabled="false"
        android:textColorHint="@android:color/holo_blue_light"/>
    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dessert"
        android:id="@+id/dessert"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add ingredients :    "
        android:inputType="text"
        android:id="@+id/edit_dessert"
        android:enabled="false"
        android:textColorHint="@android:color/holo_blue_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save"
        android:id="@+id/save"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"/>
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="See Added Meals"
          android:id="@+id/seeAddMeals"
          android:textColor="@android:color/holo_blue_light"
          android:textSize="25sp"
          android:layout_marginTop="50sp"/>

</LinearLayout>
</ScrollView>